<center>
  <h2><%= @movie_facade.movie.title %></h2>

  <p><%= button_to "Discover Movies", discover_index_path, method: :get %></p>
  <p><%= button_to "Create Viewing Party for #{ @movie_facade.movie.title }", new_movie_viewing_party_path(@movie_facade.movie.id), method: :get %></p>


  <p> 
    Vote: <%= @movie_facade.movie.vote_average %> &emsp;
    Runtime: <%= convert_to_hours_and_minutes(@movie_facade.movie.runtime) %> &emsp;
    Genre: <%= @movie_facade.movie.genres.map { |genre| genre[:name] }.join(", ")  %>  
  </p>
</center>
<div class="view_parties_container">
  <p>Summary</p>
  <p><%= @movie_facade.movie.summary %></p>

  <div id="cast">
    <p>Cast</p>
    <ul>
      <% @movie_facade.movie.cast.each do |cast_member| %>
        <li>Name: <%= cast_member.name %>, Character: <%= cast_member.character %></li>
      <%end%>
    </ul>
  </div>

  <div id="reviews">
    <P><%= @movie_facade.movie.reviews.count%> Reviews</P>
    <ul>
      <% @movie_facade.movie.reviews.each do |review| %>
        <li>
          User: <%= review.author %>, Rating: <%= review.rating %>
          <br>
          Review: <%= review.content  %>
        </li>
        <br>
      <%end%>
    </ul>
  </div>
</div>